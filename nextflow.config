manifest {
    /* Homepage of project */
    homePage = 'https://github.com/lakinsm/slss-viral-direct'

    /* Description of project */
    description = 'USDA APHIS SLSS Viral Direct Rapid Characterization for Long-Read Data.'

    /* Main pipeline script */
    mainScript = 'viral-direct.nf'
}

singularity {
    /* Enables Singularity container execution by default */
    enabled = false

    /* Enable auto-mounting of host paths (requires user bind control feature enabled) */
    autoMounts = true
}

params {
    /* These are the default parameter values for the nextflow pipeline */

    /* Flag: Run time series coverage curve analysis */
    timeseries = false

    /* Number of threads */
    threads = 2

    /* Display help message */
    help = false
}

process {
	withName: FastqToFasta {
		maxForks = 8
	}

	withName: FastaToFasta {
		maxForks = 8
	}

	withName: NucBlast {
		maxForks = 8
	}

	withName: CombineSamFiles {
		maxForks = 1
	}

	withName: OverallAnalysis {
		maxForks = 1
	}

	withName: TimeSeriesAnalysis {
		maxForks = 1
	}
}
